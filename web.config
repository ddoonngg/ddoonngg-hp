<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="WebSocket Redirect" stopProcessing="true">
          <match url="^ws/(.*)" />
          <conditions>
            <add input="{HTTP_UPGRADE}" pattern="websocket" />
          </conditions>
          <action type="Rewrite" url="ws://{HTTP_HOST}/{R:1}" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
